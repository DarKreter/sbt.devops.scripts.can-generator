{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "SourceIDs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "ID": {
                        "type": "string",
                        "pattern": "^(0[xX])[A-Fa-f0-9]+$"
                    },
                    "Name": {
                        "type": "string"
                    },
                    "MinID": {
                        "type": "string",
                        "pattern": "^(0[xX])[A-Fa-f0-9]+$"
                    },
                    "MaxID": {
                        "type": "string",
                        "pattern": "^(0[xX])[A-Fa-f0-9]+$"
                    }
                },
                "oneOf": [
                    {
                        "required": [
                            "ID",
                            "Name"
                        ]
                    },
                    {
                        "required": [
                            "Name",
                            "MinID",
                            "MaxID"
                        ]
                    }
                ]
            }
        },
        "ParamIDs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "ID": {
                        "type": "string",
                        "pattern": "^(0[xX])[A-Fa-f0-9]+$"
                    },
                    "Name": {
                        "type": "string"
                    },
                    "Priority": {
                        "type": "string",
                        "pattern": "[0-7]"
                    },
                    "Group": {
                        "type": "string"
                    },
                    "MinID": {
                        "type": "string",
                        "pattern": "^(0[xX])[A-Fa-f0-9]+$"
                    },
                    "MaxID": {
                        "type": "string",
                        "pattern": "^(0[xX])[A-Fa-f0-9]+$"
                    }
                },
                "oneOf": [
                    {
                        "required": [
                            "ID",
                            "Name",
                            "Priority",
                            "Group"
                        ]
                    },
                    {
                        "required": [
                            "Name",
                            "Priority",
                            "Group",
                            "MinID",
                            "MaxID"
                        ]
                    }
                ]
            }
        },
        "GroupIDs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "ID": {
                        "type": "string",
                        "pattern": "^(0[xX])[A-Fa-f0-9]+$"
                    },
                    "Name": {
                        "type": "string"
                    }
                },
                "required": [
                    "ID",
                    "Name"
                ]
            }
        }
    },
    "required": [
        "SourceIDs",
        "ParamIDs",
        "GroupIDs"
    ]
}
